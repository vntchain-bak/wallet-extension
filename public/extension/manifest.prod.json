{
  "name": "vntwallet",
  "description" : "vntchain wallet extension",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "demo_extension.png"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Opens popup.html"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "notifications"

  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],
  "web_accessible_resources": [
    "inpage.js"
  ]
}
