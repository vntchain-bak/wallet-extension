{
  "name": "VNT Wallet",
  "description" : "vntchain wallet extension",
  "version": "1.0.6",

  "icons": {
    "19": "./images/icon-19.png",
    "38": "./images/icon-38.png",
    "128": "./images/icon-128.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "19": "./images/icon-19.png",
      "38": "./images/icon-38.png"
    }
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Opens popup.html"
    }
  },
  "background": {
    "scripts": [
      "./extension/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "notifications"

  ],

  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["./extension/contentscript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "./extension/inpage.js"
  ]
}
